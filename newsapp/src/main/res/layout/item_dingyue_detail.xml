<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_dingyue_detail_title"
            style="@style/item_title"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="标题" />
        
        <TextView
            android:id="@+id/tv_item_dingyue_detail_description"
            style="@style/item_description"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="标题" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_item_dingyue_detail_remark"
                style="@style/item_time_or_remark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="评论:1" />

            <TextView
                android:id="@+id/tv_item_dingyue_detail_type"
                style="@style/item_time_or_remark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="虎嗅网" />

            <TextView
                android:id="@+id/tv_item_dingyue_detail_time"
                style="@style/item_time_or_remark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="5分钟前" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_dingyue_detail_image"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:scaleType="centerCrop" />

</LinearLayout>